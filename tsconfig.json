{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* overwrite strictest ruleset */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
  },
  "exclude": ["node_modules"]
}
